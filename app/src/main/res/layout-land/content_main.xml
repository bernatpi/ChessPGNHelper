<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bldg5.jj.pgnhelper.MainActivity"
    tools:showIn="@layout/activity_main">

    <!--<bldg5.jj.pgnhelper.CB
        android:id="@+id/boardShowing"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />-->

    <view class="bldg5.jj.pgnhelper.CB"
        android:id="@+id/boardShowing"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"></view>


    <TextView
        android:id="@+id/txtCurrentMove"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:gravity="top|left"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:id="@+id/linearLayout">

        <Button
            android:background="@drawable/ic_fast_rewind_black_24dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnFirst" />
        <Button
            android:background="@drawable/ic_skip_previous_black_24dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnPrev" />
        <Button
            android:background="@drawable/ic_skip_next_black_24dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnNext" />
        <Button
            android:background="@drawable/ic_fast_forward_black_24dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLast" />
        <Button
            android:background="@drawable/ic_shuffle_black_24dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSwitch" />
        <Button
            android:background="@drawable/ic_share_black_24dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnShare" />
    </LinearLayout>
</LinearLayout>
